  <script>
    // سنة ديناميكية
    document.getElementById('y').textContent = new Date().getFullYear();

    // إرسال عبر البريد
    document.getElementById('contactForm').addEventListener('submit', function(e){
      e.preventDefault();
      const d = new FormData(this);
      const name = d.get('name');
      const email = d.get('email');
      const message = d.get('message');
      const to = 'waseem@tala3mal.com';
      const subject = `استفسار جديد من الموقع – ${name}`;
      const body = `الاسم: ${name}%0Aالبريد: ${email}%0A%0Aالرسالة:%0A${message}`;
      window.location.href = `mailto:${to}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
    });

    // تنشيط الرابط الحالي أثناء التمرير
    const sections = [...document.querySelectorAll('section[id]')];
    const navLinks = [...document.querySelectorAll('nav a')];
    const spy = new IntersectionObserver((entries)=>{
      entries.forEach((entry)=>{
        if(entry.isIntersecting){
          navLinks.forEach(a=>a.classList.remove('active'));
          const link = document.querySelector(`nav a[href='#${entry.target.id}']`);
          if(link) link.classList.add('active');
        }
      })
    },{root:null,threshold:.4});
    sections.forEach(sec=>spy.observe(sec));

    // ظهور العناصر
    const appear = new IntersectionObserver((entries)=>{
      entries.forEach((entry)=>{
        if(entry.isIntersecting){ entry.target.classList.add('in'); }
      })
    },{threshold:.15});
    document.querySelectorAll('.reveal').forEach(el=>appear.observe(el));

    // i18n بسيط عربي/إنجليزي
    const i18n = {
      ar: {
        brand: 'تخطيط الأعمال', kicker:'شريكك الاستراتيجي لتحويل الرؤية إلى واقع',
        hero_title:'إدارة مشاريع وتنفيذ متكامل <span style="color:var(--brand)">بمعايير عالمية</span>',
        hero_lead:'نقدّم حلولًا متكاملة من التخطيط والمتابعة إلى التسليم والتشغيل، مع التزام بالجودة والامتثال والسلامة.',
        nav_home:'الرئيسية', nav_services:'الخدمات', nav_about:'من نحن', nav_projects:'المشاريع', nav_team:'الفريق', nav_contact:'اتصل بنا',
        cta_primary:'اطلب استشارة', cta_secondary:'تعرّف على خدماتنا',
        stat1_lbl:'مشاريع', stat2_lbl:'استشاريين خبراء', stat3_lbl:'سنوات خبرة',
        services_title:'خدماتنا', about_title:'من نحن', projects_title:'مشاريع مختارة', team_title:'فريقنا', contact_title:'اتصل بنا'
      },
      en: {
        brand: 'TAKHTEET ALAEMAL', kicker:'Your strategic partner to turn vision into reality',
        hero_title:'Integrated project management & execution <span style="color:var(--brand)">to global standards</span>',
        hero_lead:'End-to-end solutions from planning and controls to handover and operations, with a strong focus on quality, compliance and safety.',
        nav_home:'Home', nav_services:'Services', nav_about:'About', nav_projects:'Projects', nav_team:'Team', nav_contact:'Contact',
        cta_primary:'Book a Consultation', cta_secondary:'Explore Services',
        stat1_lbl:'Projects', stat2_lbl:'Expert Consultants', stat3_lbl:'Years of Experience',
        services_title:'Our Services', about_title:'About Us', projects_title:'Featured Projects', team_title:'Our Team', contact_title:'Contact Us'
      }
    };

    const refs = {
      brand: document.getElementById('brand'),
      kicker: document.getElementById('kicker'),
      hero_title: document.getElementById('hero_title'),
      hero_lead: document.getElementById('hero_lead'),
      nav_home: document.getElementById('nav_home'),
      nav_services: document.getElementById('nav_services'),
      nav_about: document.getElementById('nav_about'),
      nav_projects: document.getElementById('nav_projects'),
      nav_team: document.getElementById('nav_team'),
      nav_contact: document.getElementById('nav_contact'),
      cta_primary: document.getElementById('cta_primary'),
      cta_secondary: document.getElementById('cta_secondary'),
      stat1_lbl: document.getElementById('stat1_lbl'),
      stat2_lbl: document.getElementById('stat2_lbl'),
      stat3_lbl: document.getElementById('stat3_lbl'),
      services_title: document.querySelector('#services .section-title'),
      about_title: document.querySelector('#about .section-title'),
      projects_title: document.querySelector('#projects .section-title'),
      team_title: document.querySelector('#team .section-title'),
      contact_title: document.querySelector('#contact .section-title')
    };

    let lang = 'ar';
    const toggle = document.getElementById('langToggle');
    function applyLang(l){
      const t = i18n[l]; if(!t) return;
      document.documentElement.lang = l === 'ar' ? 'ar' : 'en';
      document.documentElement.dir = l === 'ar' ? 'rtl' : 'ltr';
      toggle.textContent = l === 'ar' ? 'EN' : 'عربي';
      refs.brand.textContent = t.brand;
      refs.kicker.textContent = t.kicker;
      refs.hero_title.innerHTML = t.hero_title;
      refs.hero_lead.textContent = t.hero_lead;
      refs.nav_home.textContent = t.nav_home;
      refs.nav_services.textContent = t.nav_services;
      refs.nav_about.textContent = t.nav_about;
      refs.nav_projects.textContent = t.nav_projects;
      refs.nav_team.textContent = t.nav_team;
      refs.nav_contact.textContent = t.nav_contact;
      refs.cta_primary.textContent = t.cta_primary;
      refs.cta_secondary.textContent = t.cta_secondary;
      refs.stat1_lbl.textContent = t.stat1_lbl;
      refs.stat2_lbl.textContent = t.stat2_lbl;
      refs.stat3_lbl.textContent = t.stat3_lbl;
      refs.services_title.textContent = t.services_title;
      refs.about_title.textContent = t.about_title;
      refs.projects_title.textContent = t.projects_title;
      refs.team_title.textContent = t.team_title;
      refs.contact_title.textContent = t.contact_title;
    }
    toggle.addEventListener('click', ()=>{ lang = lang==='ar'?'en':'ar'; applyLang(lang); });
    applyLang(lang);
  </script>
</body>
